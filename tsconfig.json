{
  "compilerOptions": {
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "outDir": "lib",
    "baseUrl": ".",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ]
}